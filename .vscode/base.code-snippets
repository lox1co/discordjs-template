      "export default class extends BaseEvent {",
      "  constructor(client: Client) {",
      "    super(client, {",
      "      name: Events.$1",
      "    });",
      "  }",
      "",
      "  run(): void {",
      "    console.log(\"$1 event\");$0",
      "  }",
      "}",
